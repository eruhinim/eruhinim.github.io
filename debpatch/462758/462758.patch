+sub edit {
+	my $message=shift;
+	my $tempfile=".commit-tmp";
+	open(FH, ">$tempfile") || die "debcommit: unable to create a temporary file.\n";
+	print FH $message;
+	close(FH);
+	system("sensible-editor $tempfile");
+	open(FH, "<$tempfile") || die "debcommit: unable to open temporary file for reading\n";
+	$message = "";
+	while(<FH>)
+	{
+		$message .= $_;
+	}
+	close(FH);
+	unlink($tempfile);
+	return($message);
